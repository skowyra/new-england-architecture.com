{#
/**
 * @file
 * Template for Project Card component.
 */
#}

<article class="project-card project-card--{{ layout|default('vertical') }}">
  {% if image_url %}
    <div class="project-card__image">
      <img src="{{ image_url }}" alt="{{ title }}" loading="lazy">
    </div>
  {% endif %}
  
  <div class="project-card__content">
    <header class="project-card__header">
      <h3 class="project-card__title">
        {% if url %}
          <a href="{{ url }}">{{ title }}</a>
        {% else %}
          {{ title }}
        {% endif %}
      </h3>
      
      {% if year or location %}
        <div class="project-card__meta">
          {% if year %}<span class="project-card__year">{{ year }}</span>{% endif %}
          {% if location %}<span class="project-card__location">{{ location }}</span>{% endif %}
        </div>
      {% endif %}
    </header>
    
    {% if description %}
      <div class="project-card__description">
        <p>{{ description }}</p>
      </div>
    {% endif %}
    
    {% if url %}
      <footer class="project-card__footer">
        <a href="{{ url }}" class="project-card__link">View Project</a>
      </footer>
    {% endif %}
  </div>
</article>